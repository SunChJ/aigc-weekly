{
  "mcpServers": {
    "exa": {
      "type": "http",
      "url": "https://mcp.exa.ai/mcp?tools=web_search_exa,crawling_exa&exaApiKey=${EXA_API_KEY}"
    },
    "firecrawl": {
      "type": "http",
      "url": "https://mcp.firecrawl.dev/${FIRECRAWL_API_KEY}/v2/mcp"
    },
    "gopher": {
      "type": "stdio",
      "command": "uvx",
      "args": ["mcp-openapi-proxy"],
      "env": {
        "OPENAPI_SPEC_URL": "https://data.gopher-ai.com/api/swagger",
        "SERVER_URL_OVERRIDE": "https://data.gopher-ai.com",
        "TOOL_WHITELIST": "/api/v1/search/live",
        "API_KEY": "${GOPHER_API_KEY}"
      }
    }
  }
}
